{
    "debug": true,
    "debug_profiling": true,
    "disable_itc": false,
    "environment": "development",
    "gdpr_compliance": false,
    "request_logging": true,
    "import_block_headers": "",
    "authentication": {
      "require_signing": false,
      "scheme": "xpub",
      "signing_disabled": true
    },
    "cache": {
      "engine": "redis"
    },
    "_cluster": {
      "prefix": "bux_cluster_",
      "coordinator": "redis",
      "redis": {
        "url": "localhost:6379",
        "use_tls": false
      }
    },
    "datastore": {
      "auto_migrate": true,
      "engine": "postgresql",
      "debug": false,
      "table_prefix": "xapi"
    },
    "graphql": {
      "enabled": false
    },
    "monitor": {
      "enabled": false
    },
    "new_relic": {
      "enabled": false
    },
    "paymail": {
      "enabled": true,
      "default_from_paymail": "bux@{{- .Values.global.domainName }}",
      "default_note": "bux Address Resolution",
      "domain_validation_enabled": true,
      "domains": [
        "{{- .Values.global.domainName }}"
      ],
      "sender_validation_enabled": true
    },
    "redis": {
      "dependency_mode": true,
      "max_active_connections": 0,
      "max_open_connections": 200,
      "max_connection_lifetime": "60s",
      "max_idle_connections": 10,
      "max_idle_timeout": "10s",
      "url": "redis://{{- .Release.Name}}-redis-master:6379",
      "use_tls": false
    },
    "server": {
      "idle_timeout": "60s",
      "port": "3003",
      "read_timeout": "40s",
      "write_timeout": "40s"
    },
    "sql": {
      "host": "{{- .Release.Name}}-postgresql-server",
      "name": "xapi",
      "password": "",
      "_port": "3306",
      "port": "5432",
      "replica": false,
      "skip_initialize_with_version": true,
      "time_zone": "UTC",
      "tx_timeout": "10s",
      "user": "postgres"
    },
    "sqlite": {
      "database_path": "./test-json.db",
      "shared": true
    },
    "task_manager": {
      "engine": "taskq",
      "factory": "memory",
      "queue_name": "development_queue"
    },
    "use_beef": true,
    "pulse": {
      "pulse_url": "http://pulse/api/v1/chain/merkleroot/verify",
      "pulse_auth_token": "mQZQ6WmxURxWz5ch"
    }
}
